<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    tools:context=".view.activity.MainActivity">

    <RelativeLayout
        android:layout_width="1920px"
        android:layout_height="720px"
        android:background="@color/color0D152B"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageleft"
            android:background="@drawable/bianyuanbutton"
            android:layout_marginLeft="10px"
            android:layout_centerVertical="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/secoundmenu"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginLeft="325px"
            android:layout_marginBottom="60px"
            android:layout_alignParentBottom="true">

            <TextView
                android:layout_width="211px"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="音乐"
                android:id="@+id/yinyue"
                android:textSize="44px"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/line"/>
            <TextView
                android:layout_width="211px"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="视频"
                android:id="@+id/shipin"
                android:textSize="44px"
                android:textColor="@color/secmenuselector"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/line"/>
            <TextView
            android:layout_width="211px"
            android:gravity="center"
            android:id="@+id/dianshi"
            android:layout_height="wrap_content"
            android:textColor="@color/secmenuselector"
            android:text="电视"
            android:textSize="44px"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/line"/>
            <TextView
            android:layout_width="211px"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="游戏"
                android:id="@+id/youxi"
            android:textColor="@color/secmenuselector"
            android:textSize="44px"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/line"/>
            <TextView
                android:layout_width="211px"
                android:gravity="center"
                android:textColor="@color/secmenuselector"
                android:layout_height="wrap_content"
                android:text="浏览器"
                android:id="@+id/liulanqi"
                android:textSize="44px"/>


        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageright"
            android:background="@drawable/bianyuanbutton"
            android:layout_marginRight="10px"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />

        <FrameLayout
            android:id="@+id/showingfragment"
            android:layout_width="1540px"
            android:layout_height="640px"
            android:layout_marginLeft="74px"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="false" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toStartOf="@+id/imageright"
            android:layout_marginTop="25px"
            android:layout_marginRight="35px">

            <com.yihukurama.cartoolst.view.widget.BebasNeueFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hourstime"
                android:text="10:08"
                style="@style/C60b" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="18px">
                <com.yihukurama.cartoolst.view.widget.BebasNeueFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/datetime"
                    android:text="12/25"
                    style="@style/C24b" />
                <com.yihukurama.cartoolst.view.widget.RPingFangFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/weektime"
                    android:layout_marginLeft="24px"
                    android:text="星期五"
                    style="@style/P24a" />

            </LinearLayout>
            <com.yihukurama.cartoolst.view.widget.RPingFangFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="68px"
                android:text="广州"
                style="@style/C24b"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <com.yihukurama.cartoolst.view.widget.RPingFangFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="26 "
                    style="@style/P36a"/>
                <ImageView
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:background="@drawable/du"/>
                <com.yihukurama.cartoolst.view.widget.RPingFangFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 晴"
                    style="@style/P36a"/>
            </LinearLayout>

            <com.yihukurama.cartoolst.view.widget.RPingFangFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="34px"
                android:text="车内"
                style="@style/P24a" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <com.yihukurama.cartoolst.view.widget.RPingFangFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cheneiwendu"
                    android:text="24 "
                    style="@style/C36b"/>

                <ImageView
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:background="@drawable/du"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/connect"
                android:layout_marginTop="250px"
                android:gravity="bottom"
                android:background="@drawable/weilianjie"/>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="1920px"
        android:layout_height="720px"
        android:background="@drawable/background1"
        android:id="@+id/background1"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="848px"
            android:layout_marginTop="124px">
            <com.yihukurama.cartoolst.view.widget.MPingFangFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="音量"
                android:layout_gravity="center_horizontal"
                style="@style/f60"/>
            <com.yihukurama.cartoolst.view.widget.BebasNeueFontTextView
                android:id="@+id/value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="76"
                android:layout_gravity="center_horizontal"
                style="@style/b288"/>
        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>
