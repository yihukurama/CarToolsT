<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    tools:context=".view.activity.MainActivity">

    <RelativeLayout
        android:layout_width="1920px"
        android:layout_height="720px"
        android:background="@color/color0D152B"
        android:layout_centerInParent="true"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageleft"
            android:background="@drawable/bianyuanbutton"
            android:layout_marginLeft="10px"
            android:layout_centerVertical="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageright"
            android:background="@drawable/bianyuanbutton"
            android:layout_marginRight="10px"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />

        <FrameLayout
            android:id="@+id/showingfragment"
            android:layout_width="1540px"
            android:layout_height="640px"
            android:layout_marginLeft="74px"
            android:background="@drawable/mokuai"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="false" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toStartOf="@+id/imageright"
            android:layout_marginTop="25px"
            android:layout_marginRight="35px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hourstime"
                android:text="10:08"
                style="@style/C60b" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="18px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/datetime"
                    android:text="12/25"
                    style="@style/C24b" />
                <com.yihukurama.cartoolst.view.widget.PingFangFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/weektime"
                    android:layout_marginLeft="24px"
                    android:text="星期五"
                    style="@style/P24a" />

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="68px"
                android:text="广州"
                style="@style/C24b"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <com.yihukurama.cartoolst.view.widget.PingFangFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="26 "
                    style="@style/P36a"/>
                <ImageView
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:background="@drawable/du"/>
                <com.yihukurama.cartoolst.view.widget.PingFangFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 晴"
                    style="@style/P36a"/>
            </LinearLayout>

            <com.yihukurama.cartoolst.view.widget.PingFangFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="34px"
                android:text="车内"
                style="@style/P24a" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cheneiwendu"
                    android:text="24 "
                    style="@style/C36b"/>

                <ImageView
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:background="@drawable/du"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/connect"
                android:layout_marginTop="50px"
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                android:text="连接手机请点我..."
                android:textSize="32px"/>
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>
