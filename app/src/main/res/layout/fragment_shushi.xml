<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yihukurama.www.fragmentapp.view.fragment.ShushiFragment">

    <RelativeLayout
        android:id="@+id/ralative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mokuai"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="76px"
                android:id="@+id/linearLayout1"
                android:layout_marginTop="68px"
                android:layout_marginBottom="100px">

                <com.yihukurama.cartoolst.view.widget.PingFangFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/kongtiao"
                    android:text="空调"
                    style="@style/P42A" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="48px"
                    android:layout_marginTop="74px"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView"
                        android:text="24"
                        style="@style/B100B" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/du"
                        android:id="@+id/imageView3" />

                </LinearLayout>


                <com.yihukurama.cartoolst.view.widget.PingFangFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/wendu"
                    android:text="温度"
                    style="@style/P36a_2"
                    android:layout_marginBottom="74px" />



                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button"
                    android:background="@drawable/jiajian"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="200px"
                android:layout_marginBottom="100px"
                android:layout_marginTop="100px">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/fengli"
                        android:background="@drawable/fengli"/>
                    <TextView
                        style="@style/B100B"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView2"
                        android:text="1" />

                    <TextView
                        style="@style/B66B"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView3"
                        android:text="/5" />
                </LinearLayout>
                <com.yihukurama.cartoolst.view.widget.PingFangFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fengliang"
                    android:text="风量"
                    style="@style/P36a_2"
                    android:layout_marginTop="42px"
                    android:layout_marginBottom="42px" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/jiajian"
                    android:id="@+id/button2" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_marginLeft="200px"
                android:layout_marginBottom="100px">



                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView2"
                    android:background="@drawable/fengxiangall"
                    android:layout_marginBottom="24px" />

                <com.yihukurama.cartoolst.view.widget.PingFangFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fengxiang"
                    style="@style/P36a_2"
                    android:text="风向"
                    android:layout_marginBottom="74px" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/button4"
                        android:background="@drawable/youselector" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/button5"
                        android:background="@drawable/xiaselector" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>



    </RelativeLayout>

</FrameLayout>
