<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yihukurama.www.fragmentapp.view.fragment.MusicFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="1540px"
        android:layout_height="640px"
        android:background="@drawable/mokuai"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2"
            android:layout_marginTop="50px"
            android:layout_marginLeft="76px"
            android:layout_alignParentStart="true">

            <com.yihukurama.cartoolst.view.widget.MPingFangFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="音乐"
                style="@style/P42A" />
            <com.yihukurama.cartoolst.view.widget.CentryTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/musicname"
                android:text="California Dreamin'"
                android:layout_marginTop="30px"
                style="@style/C50"/>
            <com.yihukurama.cartoolst.view.widget.RPingFangFontTextView
                android:layout_width="wrap_content"
                android:id="@+id/singer"
                android:layout_height="wrap_content"
                android:layout_marginTop="28px"
                android:text="The Mamas &amp; the Papas"
                style="@style/P36a_2" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignBottom="@+id/cd"
                android:layout_marginTop="80px"
                android:gravity="center_vertical">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/lastselector"
                        android:id="@+id/last" />
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/play"
                        android:background="@drawable/bofangselector" />
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/pause"
                        android:background="@drawable/pauseselector"
                        android:visibility="gone"/>

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/next"
                        android:background="@drawable/nextselector"/>

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/yinliangselector"
                        android:id="@+id/yinliang"
                        android:layout_marginLeft="118px"/>

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bofangmoshiselector"
                        android:id="@+id/bofangmoshi" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/liebiaoselector"
                        android:id="@+id/liebiao" />
        </LinearLayout>

            <SeekBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="4px"
                android:paddingLeft="2px"
                android:paddingRight="2px"
                android:progressDrawable="@drawable/seekbar_style"
                android:thumb="@drawable/seekbar_thumb"
                android:id="@+id/seekBar"
                android:layout_marginTop="35px"
                android:max="700"
                android:progress="50"/>
            <com.yihukurama.cartoolst.view.widget.RPingFangFontTextView
                android:id="@+id/time"
                android:text="00:00/00:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14px"
                style="@style/P24a_2"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="84px"
            android:layout_marginLeft="120px"
            android:id="@+id/cd"
            android:background="@drawable/cddreamin"
            android:layout_centerVertical="true"/>




    </LinearLayout>


</FrameLayout>
